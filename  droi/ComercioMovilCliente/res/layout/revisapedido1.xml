<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioRevisaPed1"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/inicio48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="   "
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Dirección de entrega"
			/>
			<!-- Dirección de entrega -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio dirección -->
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
						   <TextView android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text="Escoja una dirección de su libreta para la "/>

						</TableRow>

						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
						   <TextView android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text="entrega de los productos de este pedido."/>
						</TableRow>
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
					        <TextView android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text=" "/>
    	                </TableRow>    
						
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
   						   <TextView 
   						     android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="center_vertical"
    	                    android:text="Cambiar  a  otra  dirección  de  entrega"/>
    	                    
				    
						    <ImageView
							android:id="@+id/ivActualizaRevisaPed1"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="center_vertical"
							android:src="@drawable/actualizalibreta48x48"
							/>
						</TableRow>
										
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textStyle="bold"
							android:text="Dirección de entrega actual: "
							/>
						</TableRow>
						<!-- Datos de entrega -->
						<!-- Empresa -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEmpresaRevisaPed1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa"
							/>
						</TableRow>
						<!-- Nombre -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvNombCteRevisaPed1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre"
							/>
						</TableRow>
						<!-- Dirección -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvDireccionRevisaPed1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000" android:text="Dirección"/>
						</TableRow>
						<!-- Colonia -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvColoniaRevisaPed1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia"
							/>
						</TableRow>
						<!-- Ciudad -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvCiudadCPRevisaPed1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad y CP"
							/>
						</TableRow>
						<!-- Estado y País -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEstadoYPaisRevisaPed1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Estado y País"
							/>
						</TableRow>																			
						
						<!-- Fin datos entrega -->
						
					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
  
            <!-- Forma de envío -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/> 

    
									<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_gravity="left"
						>       
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="center_vertical"
			android:text="¿Enviar productos a domicilio?"
			/>
									<!-- Inicio si o no -->

                    
						    <RadioGroup android:layout_width="fill_parent"
 			                android:layout_height="wrap_content" 
 			                android:orientation="horizontal"
	                        android:layout_gravity="center_vertical"			 			                
 				            android:id="@+id/rgSiNoEnvioRevisaPed1">

 						            <RadioButton android:checked="true"
 						            android:text="No"
 						            android:textColor="#ff000000"
 						            android:textSize="12sp"
 						            android:id="@+id/rgNoEnvioRevisaPed1"/>
   						            <RadioButton android:checked="false"
 						            android:text="Si"
 						            android:textColor="#ff000000"
 						            android:textSize="12sp" 
 						            android:id="@+id/rgSiEnvioRevisaPed1"/>
 				            
 				            </RadioGroup>
						</TableRow>
						<!-- fin si o no -->

	         
   			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
					

					
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Pago por envío: "
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textStyle="bold"
							android:text="Tarifa única: "
							/>
							<TextView
							android:id="@+id/tvCostoEnvioRevisaPed1"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:text="$0"
							/>
						</TableRow>
					</TableLayout>
				</TableRow>
			</TableLayout>
            <!-- fin Forma de envío -->                   

<!-- comentarios -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>                
            <TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:text="Escriba su comentario"
			/>
   			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" 
		       android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="vertical"
		       >
		       
							<EditText
							android:id="@+id/etComentarioRevisaPed1"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:textColor="#ff000000" 
							android:gravity="fill"	
							android:maxLines="2"						
							/>
				</TableRow>
			</TableLayout>
            <!-- fin comentarios -->

		    
		</LinearLayout>

        <!-- Contenido -->
           <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>  
<!-- boton continuar -->
			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000"
		    android:layout_gravity="right">
		       			
		       <TableRow  android:background="#ff0099cc" android:layout_margin="1dip" 
		       android:layout_gravity="right">

							<ImageView
							android:id="@+id/ivContinuarRevisaPed1"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="right"
							android:src="@drawable/continuar48x48" 
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="  "
							android:layout_gravity="right"							
							/>
						</TableRow>
	    
         </TableLayout>

            <!-- boton continuar -->   	
	
	
	</TableLayout>
  

</ScrollView>
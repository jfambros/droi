<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioRevisaPed3"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/inicio48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="   "
					/>
					<ImageView
					android:id="@+id/ivRegresaRevisaPed3"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/regresar48x48"
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>

			<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Dirección de entrega"
			/>
			<!-- Dirección de entrega -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio dirección -->

						<!-- Datos de entrega -->
						<!-- Empresa -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEmpresaRevisaPed3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa"
							/>
						</TableRow>
						<!-- Nombre -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvNombCteRevisaPed3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre"
							/>
						</TableRow>
						<!-- Dirección -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvDireccionRevisaPed3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000" 
							android:text="Dirección"/>
						</TableRow>
						<!-- Colonia -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvColoniaRevisaPed3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia"
							/>
						</TableRow>						
						<!-- Ciudad y CP -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvCiudadYCPRevisaPed3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad y código postal"
							/>
						</TableRow>						
						<!-- Estado y país -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEstadoYPaisRevisaPed3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Estado y país"
							/>
						</TableRow>
						<!-- Fin datos entrega -->
						
					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
  
            <!-- Tabla de productos -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/> 

    
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="center_vertical"
			android:text="Productos"
			/>

	         
			<TableLayout
				android:id="@+id/tlProductosRevisaPed3" 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:stretchColumns="*" 
			    android:background="#000000">
			 
			    <TableRow  android:background="#ffffff" android:layout_margin="2dip" android:layout_gravity="center_horizontal">
			        <TextView android:text="Cantidad"  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:layout_width="0.5px"/>
			        <TextView android:text="Descripción"  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip"/>
			        <TextView android:text="Total" android:background="#CCCCCC" android:textColor="#000000" android:layout_width="1px" android:layout_margin="1dip"/>
			    </TableRow>
			
			  
			</TableLayout>    
            <!-- fin Tabla de productos -->                   
            
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="right"
			android:text="Total: "
			/>
            
<!-- Tipo de pago -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>   
			
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text="Tipo de pago seleccionado"
			android:textStyle="bold"
			/>  			             
   			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" 
		       android:layout_margin="1dip" 
		       android:layout_gravity="left"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       >
		       
		            <TextView
		            android:id="@+id/tvTipoPagoRevisaPed3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textStyle="bold"
					android:layout_gravity="left"
					android:text="Información forma de pago"
					/>
					
				</TableRow>	
		       <TableRow  android:background="#F6F6F6" 
		       android:layout_margin="1dip" 
		       android:layout_gravity="left"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       >					
		            <TextView
		            android:id="@+id/tvComentarioRevisaPed3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textStyle="bold"					
					android:layout_gravity="left"
					android:text="Información comentario"
					/>									
				</TableRow>
			</TableLayout>
            <!-- fin comentarios -->

		    
		</LinearLayout>

        <!-- Contenido -->
           <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>  
<!-- boton continuar -->
			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000"
		    android:layout_gravity="right">
		       			
		       <TableRow  android:background="#ff0099cc" android:layout_margin="1dip" 
		       android:layout_gravity="right">

							<ImageView
							android:id="@+id/ivContinuarRevisaPed3"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="right"
							android:src="@drawable/continuar48x48" 
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="  "
							android:layout_gravity="right"							
							/>
						</TableRow>
	    
         </TableLayout>

            <!-- boton continuar -->   	
	
	
	</TableLayout>
  

</ScrollView>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioNuevaDirecc1"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/inicio48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					<ImageView
					android:id="@+id/ivContinuarArrNuevaDir1"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/continuar48x48"
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Dirección de entrega"
			/>
			<!-- Dirección de entrega -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio dirección -->
							
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textStyle="bold"
							android:text="Dirección de entrega actual: "
							/>
						</TableRow>
						<!-- Datos de entrega -->
						<!-- Empresa -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEmpresaNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa"
							/>
						</TableRow>
						<!-- Nombre -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvNombCteNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre"
							/>
						</TableRow>
						<!-- Dirección -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvDireccionNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000" android:text="Dirección"/>
						</TableRow>
						<!-- Colonia -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvColoniaNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia"
							/>
						</TableRow>
						<!-- Ciudad -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvCiudadCPNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad y CP"
							/>
						</TableRow>
						<!-- Estado y País -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEstadoYPaisNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Estado y País"
							/>
						</TableRow>																			
						
						<!-- Fin datos entrega -->
						
					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
  
            <!-- Libreta de direcciones -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/> 

            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text="Seleccione otra dirección de entrega existente"
			/> 
			<Spinner android:id="@+id/spinnerSelDireccNuevaDirecc1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true"
			android:prompt="@string/comboDirecc"
			/>
    

		    <!-- Fin libreta de direcciones -->
		</LinearLayout>

        <!-- Nueva dirección -->
           <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>  
			
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Capturar otra dirección de entrega"
			/>	
			
			<!-- info personal -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio selec sexo -->
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
						   <TextView android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text="Sexo: "/>
    	                    
						    <RadioGroup android:layout_width="fill_parent"
 			                android:layout_height="wrap_content" 
 			                android:orientation="horizontal"
	                        android:layout_gravity="left"			 			                
 				            android:id="@+id/rgSexoNuevaDirecc1">

 						            <RadioButton android:checked="false"
 						            android:text="Masculino"
 						            android:textColor="#ff000000"
 						            android:textSize="13sp"
 						            android:id="@+id/rgMasculinoNuevaDirecc1"/>
   						            <RadioButton android:checked="false"
 						            android:text="Femenino"
 						            android:textColor="#ff000000"
 						            android:textSize="13sp" 
 						            android:id="@+id/rgFemeninoNuevaDirecc1"/>
 				            
 				            </RadioGroup>
						</TableRow>
						<!-- fin selecc sexo -->
						
						<!-- inicio datos personales -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre: "
							/>
							<EditText
							android:id="@+id/etNombreNuevaDirecc1"
							android:layout_width="120px"
							android:layout_height="40px"
							android:textSize="14sp"
							android:textColor="#ff000000" 
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Apellidos: "
							/>
							<EditText
							android:id="@+id/etApellidosNuevaDirecc1"
							android:layout_width="120px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa:      "
							/>
							<EditText
							android:id="@+id/etEmpresaNuevaDirecc1"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Dirección: "
							/>
							<EditText
							android:id="@+id/etDireccionNuevaDirecc1"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia: "
							/>
							<EditText
							android:id="@+id/etColoniaNuevaDirecc1"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Código postal: "
							/>
							<EditText
							android:id="@+id/etCodPostalNuevaDirecc1"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad: "
							/>
							<EditText
							android:id="@+id/etCiudadNuevaDirecc1"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Estado: "
							/>
							<EditText
							android:id="@+id/etEstadoNuevaDirecc"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="País: "
							/>
							<Spinner android:id="@+id/spinnerPaisNuevaDirecc1"
        					android:layout_width="fill_parent"
        					android:layout_height="wrap_content"
        					android:drawSelectorOnTop="true"
        					android:prompt="@string/item_spinner"
    						/>
						</TableRow>
  					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
		<!-- Fin nueva direccion -->

			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="0dip" 
		       android:layout_gravity="center_vertical">
						
							<ImageView
							android:id="@+id/ivGuardarNuevaDirecc1"
							android:layout_width="48px"
							android:layout_height="48px"
							android:src="@drawable/nuevadirecc48x48"
							android:layout_gravity="center_vertical" 
							/>
				</TableRow>			
		       <TableRow android:background="#F6F6F6" android:layout_margin="0dip"  
		       android:layout_gravity="center_vertical">

							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:layout_gravity="center_horizontal"
							android:text="Guardar dirección"
							/>
						</TableRow>	
			</TableLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff000000"
				android:text="  "
				android:layout_gravity="right"							
			/>
			
<!-- boton continuar -->
			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000"
		    android:layout_gravity="right">
		       			
		       <TableRow  android:background="#ff0099cc" android:layout_margin="1dip" 
		       android:layout_gravity="right">

							<ImageView
							android:id="@+id/ivContinuarNuevaDirecc1"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="right"
							android:src="@drawable/continuar48x48" 
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="  "
							android:layout_gravity="right"							
							/>
						</TableRow>
	    
         </TableLayout>

            <!-- boton continuar -->   	
	
	
	</TableLayout>
  

</ScrollView>

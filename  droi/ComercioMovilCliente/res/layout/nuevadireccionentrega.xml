<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioRevisaPed1"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/inicio48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="   "
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Dirección de entrega"
			/>
			<!-- Dirección de entrega -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio dirección -->
							
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textStyle="bold"
							android:text="Dirección de entrega actual: "
							/>
						</TableRow>
						<!-- Datos de entrega -->
						<!-- Empresa -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEmpresaNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa"
							/>
						</TableRow>
						<!-- Nombre -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvNombCteNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre"
							/>
						</TableRow>
						<!-- Dirección -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvDireccionNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000" android:text="Dirección"/>
						</TableRow>
						<!-- Colonia -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvColoniaNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia"
							/>
						</TableRow>
						<!-- Ciudad -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvCiudadCPNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad y CP"
							/>
						</TableRow>
						<!-- Estado y País -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEstadoYPaisNuevaDirecc1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Estado y País"
							/>
						</TableRow>																			
						
						<!-- Fin datos entrega -->
						
					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
  
            <!-- Libreta de direcciones -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/> 

			<TableLayout
				android:id="@+id/tlLibretaDireccNvaDirecc1" 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:stretchColumns="*" 
			    android:background="#000000">
			 
			    <TableRow  android:background="#ffffff" android:layout_margin="2dip" android:layout_gravity="center_horizontal">
			        <TextView android:text="Libreta de direcciones"  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:layout_width="3px"
			        android:layout_gravity="center_vertical"/>
			    </TableRow>
			
			  
			</TableLayout>  
    

		    <!-- Fin libreta de direcciones -->
		</LinearLayout>

        <!-- Contenido -->
           <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>  
<!-- boton continuar -->
			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000"
		    android:layout_gravity="right">
		       			
		       <TableRow  android:background="#ff0099cc" android:layout_margin="1dip" 
		       android:layout_gravity="right">

							<ImageView
							android:id="@+id/ivContinuarRevisaPed1"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="right"
							android:src="@drawable/continuar48x48" 
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="  "
							android:layout_gravity="right"							
							/>
						</TableRow>
	    
         </TableLayout>

            <!-- boton continuar -->   	
	
	
	</TableLayout>
  

</ScrollView>

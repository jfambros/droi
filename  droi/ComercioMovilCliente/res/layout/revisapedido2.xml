<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioRevisaPed2"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/inicio48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="   "
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Dirección de entrega"
			/>
			<!-- Dirección de entrega -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio dirección -->
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
						   <TextView android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text="Escoja una dirección de su libreta para la "/>

						</TableRow>

						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
						   <TextView android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text="entrega de los productos de este pedido."/>
						</TableRow>
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
					        <TextView android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text=" "/>
    	                </TableRow>    
						
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
   						   <TextView 
   						     android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="center_vertical"
    	                    android:text="Cambiar  a  otra  dirección  de  entrega"/>
    	                    
				    
						    <ImageView
							android:id="@+id/ivActualizaRevisaPed2"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="center_vertical"
							android:src="@drawable/actualizalibreta48x48"
							/>
						</TableRow>
										
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textStyle="bold"
							android:text="Dirección de entrega actual: "
							/>
						</TableRow>
						<!-- Datos de entrega -->
						<!-- Empresa -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvEmpresaRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa"
							/>
						</TableRow>
						<!-- Nombre -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvNombCteRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre"
							/>
						</TableRow>
						<!-- Calle -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvDireccionRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000" 
							android:text="Dirección"/>
						</TableRow>
						<!-- Colonia -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvColoniaRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia"
							/>
						</TableRow>
						<!-- Ciudad -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvCiudadRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad"
							/>
						</TableRow>
						<!-- CP -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvCPRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Código postal"
							/>
						</TableRow>
						<!-- País -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_gravity="left"
						android:orientation="horizontal">
						
							<TextView
							android:id="@+id/tvPaisRevisaPed2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="País"
							/>
						</TableRow>																			
						
						<!-- Fin datos entrega -->
						
					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
  
            <!-- Forma de envío -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/> 

    
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="center_vertical"
			android:text="Forma de pago"
			/>

	         
   			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
					

					
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="seleccione la forma de pago preferida: "
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
						>
						<!-- Inicio forma pago -->

                    
						    <RadioGroup android:layout_width="fill_parent"
 			                android:layout_height="wrap_content" 
 			                android:orientation="horizontal"
	                        android:layout_gravity="center_vertical"			 			                
 				            android:id="@+id/rgFormaPagoEnvioRevisaPed2">

 						            <RadioButton android:checked="true"
 						            android:text="Pago en tienda   "
 						            android:textColor="#ff000000"
 						            android:textSize="14sp"
 						            android:id="@+id/rgEnTiendaEnvioRevisaPed2"/>
 						            
   						            <RadioButton android:checked="false"
 						            android:text="Depósito bancario"
 						            android:textColor="#ff000000"
 						            android:textSize="14sp" 
 						            android:id="@+id/rgDepositoEnvioRevisaPed2"/>
 				            
 				            </RadioGroup>
						</TableRow>
						
					</TableLayout>
				</TableRow>
			</TableLayout>
            <!-- fin Forma de envío -->                   

<!-- comentarios -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>                
            <TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:text="Escriba su comentario"
			/>
   			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" 
		       android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="vertical"
		       >
		       
							<EditText
							android:id="@+id/etComentarioRevisaPed2"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:textColor="#ff000000" 
							android:gravity="fill"	
							android:maxLines="2"						
							/>
				</TableRow>
			</TableLayout>
            <!-- fin comentarios -->

		    
		</LinearLayout>

        <!-- Contenido -->
           <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>  
<!-- boton continuar -->
			<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:stretchColumns="*" 
		    android:background="#000000"
		    android:layout_gravity="right">
		       			
		       <TableRow  android:background="#ff0099cc" android:layout_margin="1dip" 
		       android:layout_gravity="right">

							<ImageView
							android:id="@+id/ivContinuarRevisaPed2"
							android:layout_width="48px"
							android:layout_height="48px"
							android:layout_gravity="right"
							android:src="@drawable/continuar48x48" 
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="  "
							android:layout_gravity="right"							
							/>
						</TableRow>
	    
         </TableLayout>

            <!-- boton continuar -->   	
	
	
	</TableLayout>
  

</ScrollView>
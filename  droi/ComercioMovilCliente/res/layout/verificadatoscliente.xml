<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
	android:background="#ffffffff"    
>
  
  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<!-- 
					<ImageView
					android:id="@+id/ivInicioVerificaDatosCliente"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/inicio48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					 -->
					<ImageView
					android:id="@+id/ivRegresarVerificaDatosCliente"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/regresar48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>
			<ImageView
			android:layout_width="64px"
			android:layout_height="64px"
			android:src="@drawable/usuarios" 
			android:layout_gravity="center_horizontal"
			/>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text="Iniciar sesión"
			/>
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
		       			
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" android:layout_gravity="center_horizontal">
		            <TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="center_horizontal"
					>
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="E-mail:"
							/>
							<EditText
							   android:id="@+id/etEmailVerificaDatosCliente"
							   android:textColor="#ff000000" 
								android:maxLines="1"
								android:text="jferaa007@gmail.com" 
								android:layout_height="wrap_content" 
								android:layout_width="200px" 
								android:textSize="15sp"/>
						</TableRow>
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Contraseña:  "
							/>
							<EditText
							   android:id="@+id/etPasswdVerificaDatosCliente"
							   android:layout_height="wrap_content"
								android:textColor="#ff000000" 
								android:maxLines="1"
								android:password="true"
								android:text="123456" 
								android:layout_width="200px" 
								android:textSize="15sp"/>
						</TableRow>
						
					</TableLayout>    
					

			   </TableRow>

			   <TableRow>
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
		       			
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" android:layout_gravity="center_horizontal">
		            <TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="center_horizontal"
					>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
						    <ImageView
						    android:id="@+id/ivValidaClienteVerificaDatosCliente"
							android:layout_width="48px"
							android:layout_height="48px"
							android:src="@drawable/inicia_sesion48x48" 
							android:layout_gravity="center_horizontal"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
						    <TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:layout_gravity="center_horizontal"							
							android:text="Iniciar sesión"
							/>
						</TableRow>
						
					</TableLayout>    
			        
			   </TableRow>
		    
            </TableLayout>					   
			   
			   </TableRow>
		    
            </TableLayout>
            
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text=" "
			/>    
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text="¿Nuevo usuario?"
			/>
			
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
		       			
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" android:layout_gravity="center_horizontal">
		       		<LinearLayout 
					    android:orientation="vertical"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content" 
					>
					    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#ff000000"
						android:textSize="14sp"
						android:text="¡Únete!, al crear una cuenta en Tienda virtual podrás realizar tus compras rápidamente"
						/>
	
						<ImageView
						android:id="@+id/ivClienteNuevoVerificaDatosCliente"
						android:layout_width="48px"
						android:layout_height="48px"
						android:src="@drawable/nuevousuario" 
						android:layout_gravity="center_horizontal"
						/>
					</LinearLayout>
			   </TableRow>
		    
         </TableLayout>
		</LinearLayout>

        <!-- Contenido -->
	
	
	</TableLayout>
  
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
   android:background="#ffffff"
   android:orientation="vertical"
>
  
  
  			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="16sp"
			android:text="¡Muchas gracias por su compra!"
			android:layout_gravity="center_horizontal"
			/>

  			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="16sp"
			android:text=" "
			android:layout_gravity="center_horizontal"
			/>			

		<ImageView
		android:layout_width="128px"
		android:layout_height="128px"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/finaliza128x128" 
		/>

  			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text="Lo invitamos a seguir comprando en nuestra tienda o si lo desea, llamar o enviar un SMS para reportar el pedido con mayor rápidez"
			android:layout_gravity="center_horizontal"
			/>
		
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="  "
			/>	

	<TableLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="#ffffffff"
	android:layout_gravity="center_horizontal"
	>		
		<TableRow
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal"
		>
			<ImageView
				android:id="@+id/ivLlamar"
				android:layout_width="48px"
				android:layout_height="48px"
				android:layout_gravity="center_horizontal"
				android:src="@drawable/telefono48x48" 
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="     "
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<ImageView
				android:id="@+id/ivSms"
				android:layout_width="48px"
				android:layout_height="48px"
				android:layout_gravity="center_horizontal"
				android:src="@drawable/sms" 
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="     "
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<ImageView
				android:id="@+id/ivInicioCompraFin"
				android:layout_width="48px"
				android:layout_height="48px"
				android:layout_gravity="center_horizontal"
				android:src="@drawable/inicio48x48" 
			/>

		</TableRow>
		
		<TableRow
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal"
		>		
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff000000"
				android:layout_gravity="center_horizontal"
				android:text="  Llamar"
			/>
			
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="     "
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff000000"
				android:layout_gravity="center_horizontal"
				android:text="  SMS"
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="     "
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff000000"
				android:layout_gravity="center_horizontal"
				android:text="  Inicio"
			/>
		</TableRow>		
	</TableLayout>		

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffff"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Bienvenido a su tienda en línea"
android:textColor="#ff000000"
android:textStyle="bold"
android:layout_gravity="center_horizontal"
>
</TextView>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" "
android:textColor="#ff000000"
android:layout_gravity="center_horizontal"
/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Bienvenido, lo invitamos a ver nuestro catálogo, encontrará una gran cantidad de productos a su disposición"
android:textColor="#ff000000"
android:layout_gravity="center_horizontal"
/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" "
android:textColor="#ff000000"
/>

<ImageView
android:layout_gravity="center_horizontal"
android:src="@drawable/store_logo"
android:layout_width="245px"
android:layout_height="92px"
/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" "
android:textColor="#ff000000"
android:textSize="10sp"
android:layout_gravity="center_horizontal"
/>

	<TableLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="#ffffffff"
	android:layout_gravity="center_horizontal"
	>
		<TableRow
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal"
		>
			<ImageView
			android:id="@+id/imgCategorias"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/categorias64x64"
			android:layout_width="64px"
			android:layout_height="64px"
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="     "
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<ImageView
			android:id="@+id/ivDatosCuenta"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/entrarcuenta64x64"
			android:layout_width="64px"
			android:layout_height="64px"
			/>
		</TableRow>
		
		<TableRow
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal"
		>

			<TextView
			android:id="@+id/txtVerCategorias"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ver categorías"
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="     "
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Mi cuenta"
			android:textColor="#ff000000"
			android:layout_gravity="center_horizontal"
			/>
			
		</TableRow>

</TableLayout>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" "
android:textColor="#ff000000"
android:layout_gravity="center_horizontal"
/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" "
android:textColor="#ff000000"
android:layout_gravity="center_horizontal"
/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Derechos reservados 2010 Tienda virtual"
android:textColor="#ff000000"
android:layout_gravity="center_horizontal"
android:textSize="12sp"
/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Desarrollado en Android"
android:textColor="#ff000000"
android:layout_gravity="center_horizontal"
android:textSize="12sp"
/>
<ImageView
android:id="@+id/imgRemoto1"
android:layout_gravity="center_horizontal"
android:layout_width="48px"
android:layout_height="48px"
>
</ImageView>

</LinearLayout>
</ScrollView>




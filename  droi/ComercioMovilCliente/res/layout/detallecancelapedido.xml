<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
	android:background="#ffffffff"    
>
  
  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioDetalleCancelaP"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/finalizasesion48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					
					<ImageView
					android:id="@+id/ivRegresarDetalleCancelaP"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/regresar48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					<ImageView
					android:id="@+id/ivInicioCancelaDetalleP"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/iniciodatoscte48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					<ImageView
					android:id="@+id/ivCancelaPedidoDetalleP"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/cancelapedido248x48"
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="16sp"
			android:layout_gravity="center_horizontal"
			android:text="Detalle del pedido"
			/>		
			<ImageView
			android:layout_width="64px"
			android:layout_height="64px"
			android:src="@drawable/detallepedido64x64" 
			android:layout_gravity="center_horizontal"
			/>

			<TextView
			android:id="@+id/tvNoPedidoCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:text="Pedido No.: "
			/>
			<TextView
			android:id="@+id/tvFechaCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:text="Fecha del pedido: "
			/>	
			<!-- Inicio direcc entrega -->		
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
		       			
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" android:layout_gravity="center_horizontal">
		            <TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left"
					>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Dirección de entrega: "
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:id="@+id/tvEmpresaCancelaDetalleP"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa "
							/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:id="@+id/tvNombreCancelaDetalleP"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="nombre"
							/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:id="@+id/tvDireccionCancelaDetalleP"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Dirección"
							/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:id="@+id/tvColoniaCancelaDetalleP"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="colonia"
							/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textSize="14sp"
							android:id="@+id/tvCiudadYCPCancelaDetalleP" android:text="Ciudad y CP"/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>
							<TextView
							android:id="@+id/tvEstadoYPaisCancelaDetalleP"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textSize="14sp"
							android:text="Estado y país"
							/>
						</TableRow>
						
					</TableLayout>
			   </TableRow>
			   
			   <!--Fin Direcc entrega -->
	
		    
            </TableLayout>

<!-- Tabla de productos -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/> 

    
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="center_vertical"
			android:text="Productos"
			/>

	         
			<TableLayout
				android:id="@+id/tlProductosCancelaDetalleP" 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:stretchColumns="*" 
			    android:background="#000000">
			 
			    <TableRow  android:background="#ffffff" android:layout_margin="2dip" android:layout_gravity="center_horizontal">
			        <TextView android:text="Cantidad"  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:layout_width="0px"/>
			        <TextView android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:text="Nombre"/>
			        <TextView android:text="Total" android:background="#CCCCCC" android:textColor="#000000" android:layout_width="1px" android:layout_margin="1dip"/>
			    </TableRow>
			
			  
			</TableLayout>    
            <!-- fin Tabla de productos -->                   

<!-- Costo total -->

<TextView
            android:id="@+id/tvSubtotalEnvioCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="right"
			android:text="Subtotal: $"
			/>
			
            <TextView
            android:id="@+id/tvCostoEnvioCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="right"
			android:text="Costo envío: $"
			/>
            
            <TextView
            android:id="@+id/tvTotalCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:layout_gravity="right"
			android:text="Total: $"
			/>


<!-- Fin costo total -->

<!-- tipo de pago -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text=" "
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"			
			android:text="Forma de pago:"
			/> 
            <TextView
            android:id="@+id/tvFormaPagoCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:text=" "
			/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text=" "
			/>      

<!-- Fin tipo de pago -->

<!-- Envío -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:text="Forma de envío:"
			/>   
            <TextView
            android:id="@+id/tvFormaEnvioCancelaDetalleP"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:text=" "
			/>   
<!-- Fin envío -->

<!-- Comentario -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>   
			
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:text="Comentario"
			android:textStyle="bold"
			/>  			             
   			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
	
		       <TableRow  android:background="#F6F6F6" 
		       android:layout_margin="1dip" 
		       android:layout_gravity="left"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       >					
		            <TextView
		            android:id="@+id/tvComentarioCancelaDetalleP"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textStyle="bold"					
					android:layout_gravity="left"
					android:text="Información comentario"
					/>									
				</TableRow>
			</TableLayout>
            <!-- fin comentarios -->

            
		</LinearLayout>

        <!-- Contenido -->
	
	
	</TableLayout>
  
</LinearLayout>

</ScrollView>
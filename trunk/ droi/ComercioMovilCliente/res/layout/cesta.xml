			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text="Confirmar"
			/>			
		</TableRow>
	</TableLayout>

</LinearLayout>

<!-- Fin botones e información -->
  
<TableLayout
	android:id="@+id/tlCesta" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="*" 
    android:background="#000000">
 
    <TableRow  android:background="#ffffff" android:layout_margin="2dip" android:layout_gravity="center_horizontal">
        <TextView android:text="Borrar"  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:layout_width="0.5px"/>
        <TextView android:text="       "  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:layout_width="1px"/>
        <TextView android:text="Descripción"  android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip"/>
        <TextView android:text="Cant." android:background="#CCCCCC" android:textColor="#000000" android:layout_margin="1dip" android:layout_width="15px"/>
        <TextView android:text="Total" android:background="#CCCCCC" android:textColor="#000000" android:layout_width="1px" android:layout_margin="1dip"/>
    </TableRow>
  
</TableLayout>    

</TableLayout>  
 			<ImageView
			android:id="@+id/ivSinProductosCesta"
			android:layout_width="192px"

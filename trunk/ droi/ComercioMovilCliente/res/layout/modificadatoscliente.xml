<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioModificaDatos"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/finalizasesion48x48"
					/>
					<!-- 
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					
					
					<ImageView
					android:id="@+id/ivRegresarVerificaCliente"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/regresar48x48"
					/>
					 -->
					 
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					<ImageView
					android:id="@+id/ivRegresarModificaDatos"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/regresar48x48" 
					/>			
					
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:textStyle="bold"
			android:text="Datos de mi cuenta"
			/>
			<!-- info personal -->
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
					   <!-- Inicio selec sexo -->
						<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="left"
						>
						   <TextView android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:textColor="#ff000000"
	                        android:layout_gravity="left"
    	                    android:text="Sexo: "/>
    	                    
						    <RadioGroup android:layout_width="fill_parent"
 			                android:layout_height="wrap_content" 
 			                android:orientation="horizontal"
	                        android:layout_gravity="left"			 			                
 				            android:id="@+id/rgModificaDatos">

 						            <RadioButton android:checked="false"
 						            android:text="Masculino"
 						            android:textColor="#ff000000"
 						            android:textSize="13sp"
 						            android:id="@+id/rbMasculinoModifcaDatos"/>
   						            <RadioButton android:checked="false"
 						            android:text="Femenino"
 						            android:textColor="#ff000000"
 						            android:textSize="13sp" 
 						            android:id="@+id/rbFemeninoModificaDatos"/>
 				            
 				            </RadioGroup>
						</TableRow>
						<!-- fin selecc sexo -->
						
						<!-- inicio datos personales -->
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nombre: "
							/>
							<EditText
							android:id="@+id/etNombreModificaDatos"
							android:layout_width="120px"
							android:layout_height="40px"
							android:textSize="14sp"
							android:textColor="#ff000000" 
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Apellidos: "
							/>
							<EditText
							android:id="@+id/etApellidosModificaDatos"
							android:layout_width="120px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							/>
						</TableRow>
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="80px"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textSize="14sp"
							android:text="Fecha nacimiento: "
							/>
							<EditText
							android:id="@+id/etFechaNacModificaDatos"
							android:layout_width="120px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							
							/>
							<ImageView
							android:id="@+id/ivCalendarioModificaDatos"
							android:layout_width="48px"
							android:layout_height="48px"
							android:src="@drawable/calendario48x48" 
							/>
						</TableRow>	
						
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="E-mail: "
							/>
							<EditText
							android:id="@+id/etEMailModificaDatos"
							android:layout_width="120px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							android:inputType="textEmailAddress"
							/>
						</TableRow>						
						
  					</TableLayout>
			   </TableRow>
            </TableLayout>
            <!-- fin info personal -->
            
            <!-- empresa -->
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>                
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:text="Empresa"
			/>
   			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Empresa:      "
							/>
							<EditText
							android:id="@+id/etEmpresaModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
					</TableLayout>
				</TableRow>
			</TableLayout>
            <!-- fin empresa -->
            
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="12sp"
			android:text=" "
			/>                
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textStyle="bold"
			android:text="Dirección"
			/>
            <!-- dirección -->
   			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
			   
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" 
		       android:layout_gravity="center_horizontal">
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="left">
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Dirección: "
							/>
							<EditText
							android:id="@+id/etDireccionModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Colonia: "
							/>
							<EditText
							android:id="@+id/etColoniaModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Código postal: "
							/>
							<EditText
							android:id="@+id/etCodPostalModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Ciudad: "
							/>
							<EditText
							android:id="@+id/etCiudadModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Estado: "
							/>
							<EditText
							android:id="@+id/etEstadoModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="País: "
							/>
							<Spinner android:id="@+id/spinnerPaisModificaDatos"
        					android:layout_width="fill_parent"
        					android:layout_height="wrap_content"
        					android:drawSelectorOnTop="true"
        					android:prompt="@string/item_spinner"
    						/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Teléfono: "
							/>
							<EditText
							android:id="@+id/etTelefonoModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal">
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Fax: "
							/>
							<EditText
							android:id="@+id/etFaxModificaDatos"
							android:layout_width="150px"
							android:layout_height="40px"
							android:textSize="16sp"
							android:textColor="#ff000000" 
							android:maxLines="1"
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:textSize="12sp"
							android:text="(Opcional)"
							/>							
						</TableRow>
					</TableLayout>
				</TableRow>
			</TableLayout>
            <!-- fin dirección -->
            

            
            <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text=" "
			/>    
			
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
		       			
		       <TableRow  android:background="#ff0099cc" android:layout_margin="1dip" android:layout_gravity="center_horizontal">
		          		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		android:layout_gravity="right"
		>
		       		<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="right">
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal"
						android:layout_gravity="right"
						>
						
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Continuar"
							/>
							<ImageView
							android:id="@+id/ivContinuarModificaDatos"
							android:layout_width="48px"
							android:layout_height="48px"
							android:src="@drawable/continuar48x48" 
							/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="  "
							/>

						</TableRow>
					</TableLayout>
								   </LinearLayout>
			   </TableRow>

		    
         </TableLayout>
		</LinearLayout>

        <!-- Contenido -->
	
	
	</TableLayout>
  

</ScrollView>
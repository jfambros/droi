<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
	android:background="#ffffffff"    
>
  
  
	<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffffff"
	>
		<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#ff0099cc"
		>
			<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal"
					>
					<ImageView
					android:id="@+id/ivInicioActualizaContra"
					android:layout_width="48px"
					android:layout_height="48px"
					android:src="@drawable/finalizasesion48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					<ImageView
					android:id="@+id/ivRegresarActualizaContra"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/regresar48x48"
					/>
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#ff000000"
					android:textSize="14sp"
					android:text="    "
					/>
					<ImageView
					android:id="@+id/ivContinuarActualizaContra"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/continuar48x48"
					/>
				</TableRow>
			</TableLayout>	

		</LinearLayout>	
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
			android:background="#ffffffff"    
		>
			<ImageView
			android:layout_width="64px"
			android:layout_height="64px"
			android:src="@drawable/usuarios" 
			android:layout_gravity="center_horizontal"
			/>

			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="14sp"
			android:text="Mi Contrase単a"
			android:textStyle="bold"
			/>
			<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" 
		    android:background="#000000">
		       			
		       <TableRow  android:background="#F6F6F6" android:layout_margin="1dip" android:layout_gravity="center_horizontal">
		            <TableLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:layout_gravity="center_horizontal"
					>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Contrase単a:"
							/>
							<EditText
							   android:id="@+id/etContraActualActualizaContra"
							   android:textColor="#ff000000" 
								android:maxLines="1"
								android:password="true"
								android:text="" 
								android:layout_height="40px" 
								android:layout_width="180px" 
								android:textSize="15sp"/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Nueva contrase単a:"
							/>
							<EditText
							   android:id="@+id/etNuevaContraActualizaContra"
							   android:layout_height="40px"
								android:textColor="#ff000000" 
								android:maxLines="1"
								android:password="true"
								android:layout_width="180px" 
								android:textSize="15sp"/>
						</TableRow>
						<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_gravity="center_horizontal"
						>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
							android:text="Confirme contrase単a:"
							/>
							<EditText
							   android:id="@+id/etConfirmaContraActualizaContra"
							   android:layout_height="40px"
								android:textColor="#ff000000" 
								android:maxLines="1"
								android:password="true"
								android:layout_width="180px" 
								android:textSize="15sp"/>
						</TableRow>
						
					</TableLayout>    


			   </TableRow>
			   
            </TableLayout>
            
			
		</LinearLayout>

        <!-- Contenido -->
	
	
	</TableLayout>
  
</LinearLayout>
